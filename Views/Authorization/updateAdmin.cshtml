@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "updateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-0">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li style="margin-top:5px"><i class="fas fa-id-card-alt"></i></li>
                    <li style="margin-left:10px"><h1 class="m-0 text-dark"> Authorization's</h1></li>
                </ol>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">WebDictionary v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <section class="col-lg-6" style="position: relative; margin: auto;">
        <div class="card bg-gradient-indigo">
            <div class="card-header border-0">
                <h3 class="card-title">
                    <i class="fas fa-edit mr-1"></i>
                    Update Admin
                </h3>
                <div class="card-tools">
                    <a href="/Authorization/Index" class="btn bg-indigo btn-sm">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("updateAdmin", "Authorization", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Mail")
                        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdminUserName, "", new { @style = "color:orange" })
                        <br />
                        @Html.Label("Role")
                        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdminRole, "", new { @style = "color:orange" })
                        <br />
                        @Html.Label("Password")
                        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @style = "color:orange" })
                        <br />
                        @Html.HiddenFor(x=>x.AdminId)
                    <button class="btn btn-outline-light" style="margin-top:10px">Save Changes</button>
                    </div>
                }
            </div>
            <!-- /.card-body -->
        </div>
    </section>
</div>

@section scripts{
    @if (ViewBag.alert == "true")
    {
        <script>
            $(document).ready(function () {
                Swal.fire("Success", "Updating admin completed successfully.", "success").then(() => {
                    window.location.href = '@Url.Action("Index", "Authorization")';
                });
            });
        </script>
    }
}

